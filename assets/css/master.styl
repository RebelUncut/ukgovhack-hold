@import '_settings'

normalize-css()
base()

$background-color = #3F579C
$acent-color = #C4494D

body
  font-family: "futura-pt", sans-serifs
  font-weight: normal
  
.top
  color: white
  background: 
    linear-gradient(
      to bottom,
      alpha($background-color, 0.6),
      alpha($background-color, 0.6)),
      url("/img/background.jpg");
  background-size: cover
  padding: 2.5vmax 3vmax
  h1
    font-size: 5vmax
    margin-top 0 
    margin-bottom 1rem 
  h2 
    font-size: 2vmax
    margin-top 0
  h3
    margin-bottom 0
    display inline
  a
    color: white
    font-weight: bold
    margin-left 1em
    
.updates
  padding: 2.5vmax 3vmax
  h3
    margin-top 0
  form
    width: 100%
    display flex
    justify-content: space-between
    .input-group
      width: 30%
      label
        display block
        margin-bottom 5px
      input
        outline: 0
        padding-bottom 5px
        width 100%
      input[type=text],
      input[type=email] 
        border: none
        border-bottom:2px solid lightgrey
        width: 100%
        padding-left 0
        &:focus
          border-color: $background-color
      &.button
        display: flex
        flex-direction: column
        justify-content: flex-end
        input
          background: $background-color
          color: white
          border: none
          padding: 1em

.labs
  padding-left 3vmax
  p
    margin-top 0
    margin-bottom 2.5vmax
    a
      color: RGB(0, 181, 161)
      
+below(800px)
  .top
    h2
      font-size: 1em
    a
      display block
      margin-left 0
      margin-top 0.5em
  .updates 
    h3
      margin-bottom 2vmax
    form 
      flex-direction: column
      .input-group
        width: 100%
        margin-bottom 1em
        &.button input
          padding: 0.5em